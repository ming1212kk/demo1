  <script>
// 获取所有的删除按钮元素
const deleteButtons = document.querySelectorAll('.delete-button');

// 为每个删除按钮添加点击事件处理程序
deleteButtons.forEach(deleteButton => {
  deleteButton.addEventListener('click', function () {
  // 在这里执行删除操作，例如从列表中删除相应的待办事项
  // 可以使用parentNode找到li元素并从DOM中删除它
    const listItem = this.closest('li');
    listItem.remove();
  });
});
  </script>
  <script>
// 获取全选按钮元素
const selectAllButton = document.querySelector('.rectangle.green');

// 获取取消全选按钮元素
const unselectAllButton = document.querySelector('.rectangle.red');

// 获取所有的待办事项复选框
let checkboxes = document.querySelectorAll('input[type="checkbox"]');

// 为全选按钮添加点击事件处理程序
selectAllButton.addEventListener('click', function () {
  // 将全选按钮的状态设置为全选中
  isAllSelected = true;

  // 更新所有复选框的状态
  checkboxes.forEach(checkbox => {
    checkbox.checked = true;
  });

  // 更新全选按钮的样式
  this.classList.add('active');

  // 更新取消全选按钮的样式
  unselectAllButton.classList.remove('active');
});

// 为取消全选按钮添加点击事件处理程序
unselectAllButton.addEventListener('click', function () {
  // 将全选按钮的状态设置为未选中
  isAllSelected = false;

  // 更新所有复选框的状态
  checkboxes.forEach(checkbox => {
    checkbox.checked = false;
  });

  // 更新取消全选按钮的样式
  this.classList.add('active');

  // 更新全选按钮的样式
  selectAllButton.classList.remove('active');
});

// 变量来跟踪全选按钮的状态
let isAllSelected = false;
  </script>
  <script>
    // 获取全屏按钮元素
    const fullscreenButton = document.querySelector('.rectangle.blue');
    // 添加点击事件处理程序
    fullscreenButton.addEventListener('click', () => {
  // 检查浏览器是否支持 Fullscreen API
  if (document.documentElement.requestFullscreen) {
    if (!document.fullscreenElement) {
      // 如果当前不是全屏状态，则进入全屏
      document.documentElement.requestFullscreen();
    }
  }
});
  </script>
  <script>
    function getCurrentTime() {
  const now = new Date();

  // 获取年份、月份、日期、小时和分钟
  const year = now.getFullYear().toString().slice(-2); // 仅获取后两位数字
  const month = String(now.getMonth() + 1).padStart(2, '0'); // 月份从0开始，因此要加1，并且保证两位数
  const day = String(now.getDate()).padStart(2, '0'); // 保证两位数
  const hours = String(now.getHours()).padStart(2, '0'); // 保证两位数
  const minutes = String(now.getMinutes()).padStart(2, '0'); // 保证两位数

  // 组合时间字符串
  const formattedTime = `${year}-${month}-${day} ${hours}:${minutes}`;

  return formattedTime;
}

  // 获取加号按钮元素
const addButton = document.querySelector('.circle');

// 获取待办事项列表元素
const todoList = document.querySelector('ul');

  let taskCounter = 4;

    // 为加号按钮添加点击事件处理程序
    addButton.addEventListener('click', () => {
      // 创建一个新的待办事项条目
      const newItem = document.createElement('li');
      const currentTime = getCurrentTime(); // 获取当前时间
      taskCounter++; // 增加计数器的值，确保生成唯一的id
      newItem.innerHTML = `
      <input type="checkbox" id="task${taskCounter}">
      <label for="task${taskCounter}" class="circle-li"></label>
      <input type="text" class="plan2" contenteditable="true" placeholder="请输入TODO事件">
      <span class="time">${currentTime} <span class="delete-button"></span></span>
      `;

  // 将新条目添加到待办事项列表
  todoList.appendChild(newItem);

  // 重新获取复选框列表，包括新添加的复选框
   checkboxes = document.querySelectorAll('input[type="checkbox"]');

  // 设置新条目的复选框为未选中状态
  const newCheckbox = newItem.querySelector('input[type="checkbox"]');
  newCheckbox.checked = false;

  // 获取新添加的删除按钮并为其添加点击事件处理程序
  const newDeleteButton = newItem.querySelector('.delete-button');
  newDeleteButton.addEventListener('click', function () {

    // 在这里执行删除操作，例如从列表中删除相应的待办事项
    // 可以使用parentNode找到li元素并从DOM中删除它

    const listItem = this.closest('li');
    listItem.remove();
  });
});

  </script>
